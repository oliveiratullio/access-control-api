{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.ts$": ["ts-jest", { "useESM": true }],
    "^.+\\.(js|mjs|cjs)$": [
      "babel-jest",
      {
        "presets": ["@babel/preset-env"]
      }
    ]
  },
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(@faker-js|bcrypt)/.*)"
  ]
}